<h1>Students</h1>

<table>
  <thead>
  <tr>
    <th>Full Name</th>
    <th>Email</th>
    <th>Phone</th>
    <th>City</th>
    <th>Actions</th>
  </tr>
  </thead>

  <tbody>
  <% @students.each do |student| %>
    <tr>
      <td><%= link_to student.fullname, student %></td>
      <td><%= student.email %></td>
      <td><%= student.phone %></td>
      <td><%= student.city %></td>
      <td>
        <%= link_to 'Show', student %>
        <%= link_to 'Edit', edit_student_path(student) %>
        <%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %>
        <%= link_to 'Generate Grade', generate_grade_student_path(student), method: :get %>

      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'New Student', new_student_path %>
