<%= form_with(model: note) do |form| %>
  <% if note.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(note.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
        <% note.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :note, style: "display: block" %>
    <%= form.number_field :note %>
  </div>

  <div>
    <%= form.label :student_id, style: "display: block" %>
    <% if @note.student %>
      <%= form.text_field :student_id, value: @note.student.name, disabled: true %>
    <% else %>
      <%= form.collection_select :student_id, Student.all, :id, :name %>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
