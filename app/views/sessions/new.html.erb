<h1>Sign In</h1>

<% if flash[:alert] %>
  <div id="error_explanation">
    <p><%= flash[:alert] %></p>
  </div>
<% end %>

<%= form_with url: '/login' do |f| %>
  <%= f.label :email %>
  <br>
  <%= f.text_field :email %>
  <br><br>
  <%= f.label :password %>
  <br>
  <%= f.password_field :password %>
  <br><br>
  <%= f.submit %>
<% end %>
