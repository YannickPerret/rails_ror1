<h1>Log In</h1>

<%= form_with(scope: :session, url: login_path, local: true) do |form| %>
  <div>
    <%= form.label :email %>
    <%= form.email_field :email, required: true %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password, required: true %>
  </div>

  <div>
    <%= form.submit "Log in" %>
  </div>
<% end %>

<%= link_to 'Back', root_path %>
