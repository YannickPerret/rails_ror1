<p style="color: green"><%= notice %></p>

<h1>Subjects</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Archived</th>
    <th>Actions</th>
  </tr>
  </thead>

  <tbody>
  <% @subjects.each do |subject| %>
    <tr>
      <td><%= subject.name %></td>
      <td><%= subject.archived ? 'Yes' : 'No' %></td>
      <td>
        <%= link_to 'Show', subject %>
        <%= link_to 'Edit', edit_subject_path(subject) %>
        <%= link_to 'Destroy', subject, method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'New Subject', new_subject_path %>
