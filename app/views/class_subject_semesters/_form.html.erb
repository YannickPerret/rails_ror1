<%= form_with(model: @class_subject_semester, local: true) do |form| %>
  <div class="field">
    <%= form.label :school_class_id %>
    <%= form.collection_select :school_class_id, SchoolClass.all, :id, :name, include_blank: true %>
  </div>

  <div class="field">
    <%= form.label :semester_id %>
    <%= form.collection_select :semester_id, Semester.all, :id, :name_and_year, include_blank: true %>
  </div>

  <div class="field">
    <%= form.label :subject_id %>
    <%= form.collection_select :subject_id, Subject.all, :id, :name, include_blank: true %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>