<p style="color: green"><%= notice %></p>

<h1>School Classes</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Actions</th>
  </tr>
  </thead>

  <tbody>
  <% @school_classes.each do |school_class| %>
    <tr>
      <td><%= school_class.name %></td>
      <td>
        <%= link_to 'Show', school_class %>
        <%= link_to 'Edit', edit_school_class_path(school_class) %>
        <%= link_to 'Destroy', school_class, method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'New School Class', new_school_class_path %>
