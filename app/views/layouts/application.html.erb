<!DOCTYPE html>
<html>
  <head>
    <title>Gestion des notes - CPNV 2024</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  </head>

  <body>
  <header>
    <nav>
      <%= link_to 'Home', root_path %>
      <% if current_user %>
        <% if current_user.student? %>
          <%= link_to 'My Grades', student_grades_path(current_user) %>
        <% else %>
          <%= link_to 'Semesters', semesters_path %>
          <%= link_to 'Subjects', subjects_path %>
          <%= link_to 'School Classes', school_classes_path %>
          <%= link_to 'Students', students_path %>
          <%= link_to 'Assign school class to semester subject', class_subject_semesters_path %>
          <% if current_user.supervisor? %>
            <%= link_to 'Teachers', teachers_path %>
            <%= link_to 'Supervisors', supervisors_path %>
            <%= link_to 'Teacher-Subject Associations', teacher_subjects_path %>
          <% end %>
        <% end %>
        <%= button_to 'Logout', '/logout', method: :delete %>
      <% else %>
        <%= link_to 'Login', '/login' %>
      <% end %>
    </nav>

  </header>
  <main>
    <%= render 'layouts/flash' %>
    <%= yield %>
  </main>
  </body>
</html>
