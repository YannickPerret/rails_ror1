<%= form_with(model: @grade, local: true) do |form| %>
  <%= form.hidden_field :student_id, value: @student.id %>
  <%= form.hidden_field :semester_id, value: @semester.id %>
  <%= form.hidden_field :subject_id, value: @subject.id %>



  <div class="field">
    <%= form.label :value, 'Value' %>
    <%= form.number_field :value, in: 1..6 %>
  </div>

  <div class="actions">
    <%= form.submit 'Save' %>
  </div>
<% end %>
